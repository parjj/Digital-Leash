<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/errorText"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        android:hint="@string/message"
        android:padding="40dp"
        android:singleLine="false"
        android:inputType="textMultiLine"
        android:background="@drawable/border_line"
        android:importantForAutofill="no" tools:targetApi="o" />

    <TextView
        android:id="@+id/parentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:text="@string/parent_username"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/border_line"
        android:hint="@string/parent"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:text="@string/parent"
        android:textAlignment="center"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/childText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:text="@string/child_username"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/child"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border_line"
        android:hint="@string/child"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:text="@string/child"
        android:textAlignment="center"
        tools:targetApi="o" />


    <Button
        android:id="@+id/retrive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/report_location" />


</LinearLayout>

